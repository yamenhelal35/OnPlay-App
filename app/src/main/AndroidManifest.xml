            android:name="com.example.onplay.M5"
            android:exported="false" />
        <activity
            android:name="com.example.onplay.M4"
            android:exported="false" />
        <activity
            android:name="com.example.onplay.M3"
            android:exported="false" />
        <activity
            android:name="com.example.onplay.M2"
            android:exported="false" />
        <activity
            android:name="com.example.onplay.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.example.onplay.NotificationBroadcast" />

    </application>

</manifest>